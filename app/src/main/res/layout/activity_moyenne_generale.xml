<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MoyenneGenerale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_200"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_700"
            android:text="Nom"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/dark_700"
            android:text="Coeff"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_700"
            android:textSize="18sp"
            android:text="Moyenne"/>
    </LinearLayout>

    <ListView
        android:id="@+id/activity_moyenne_generale_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="6dp"
        android:paddingBottom="7dp"
        android:paddingTop="6dp"
        android:background="@drawable/layout_bg_listview"/>

    <TextView
        android:id="@+id/activity_moyenne_generale_00_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/layout_bg_txt"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:layout_gravity="center"
        android:text="00.00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"
            android:textColor="@color/black"
            android:text="Remarque : "/>

        <TextView
            android:id="@+id/activity_moyenne_generale_remarque_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="7dp"
            android:text="jgirf hifhue fhufhu hufufhu hfhuhfufh ufhuehfuhfuefheu hfue"/>

    </LinearLayout>
</LinearLayout>